/*  <vars>  */
$media = "screen and (max-width:992px)";
/*  </vars>  */

/*  <general>  */
html
	overflow-y scroll
	min-height 100vh
	font-size 62.5%
	cursor default
    -ms-overflow-style -ms-autohiding-scrollbar
    -webkit-text-size-adjust 100%
    -ms-text-size-adjust 100%
	-webkit-tap-highlight-color rgba(0, 0, 0, 0)
	text-rendering optimizeLegibility
	-webkit-font-smoothing antialiased
	font-smoothing antialiased
	-moz-osx-font-smoothing grayscale
body
	display -webkit-flex
	display -moz-flex
	display -ms-flex
	display -o-flex
	display flex
	flex-direction column
	min-height 100vh
	color #000
	font normal 1.6rem/1.3 'Open Sans'
	background-color #f1f1f1
:-moz-placeholder
	opacity 1
	color currentColor
:-ms-input-placeholder
	opacity: 1
	color currentColor
a
	color #174eaa
	font inherit
	text-decoration none
	transition all .2s
	&:hover
		text-decoration underline
img
	max-width 100%
.main
	flex 1
	padding-bottom 60px
/*  </general>  */

/*  <menu>  */
.menu
	display -webkit-flex
	display -moz-flex
	display -ms-flex
	display -o-flex
	display flex
	flex-direction column
	position fixed
	top 0
	bottom 0
	left 0
	overflow-y auto
	width 333px
	z-index 10
	background-color #fff
	border-right 3px solid #fa6900
	padding 25px 0
	margin 0
	transform translateX(-100%)
	transition all .5s
	@media $media
		width 286px
	&--active
		transform translateX(0)
	&__cover
		position fixed
		top 0
		right 0
		bottom 0
		left 0
		z-index 9
		background-color rgba(#151e29, .85)
	&__logo
		flex-shrink 0
		display block
		position relative
		padding-left 60px
		margin 0 15px 35px
		img
			position absolute
			top 6px
			left 0
			width 50px
		&-name
			display block
			color #000
			font-weight bold
			font-size 2rem
			text-transform uppercase
		&-slogan
			display block
			color #000
			font-size 1.7rem
		a:hover&
			text-decoration none
	&__nav
		flex 1
		margin-bottom 35px
		&-item
			display block
			color #000
			text-transform uppercase
			background-color #f5f5f5
			border-bottom 1px solid #ddd
			padding 15px 15px
			&:last-child
				border-bottom 0
			a:hover&
				text-decoration none
				background-color #e9e9e9
	&__copyright
		flex-shrink 0
		padding 0 15px
/*  </menu>  */

/*  <header>  */
.header
	flex-shrink 0
	height 470px
	background-color #69d2e7
	border-top 5px solid #fa6900
	.container
		display -webkit-flex
		display -moz-flex
		display -ms-flex
		display -o-flex
		display flex
		align-items center
		position relative
		height 100%
	&__logo
		position absolute
		top 35px
		left 15px
		padding-left 60px
		img
			position absolute
			top 6px
			left 0
			width 50px
		&-name
			display block
			color #000
			font-weight bold
			font-size 2rem
			text-transform uppercase
		&-slogan
			display block
			color #000
			font-size 1.7rem
		a:hover&
			text-decoration none
	&__burger
		position absolute
		top 35px
		right 15px
		width 40px
		height @width
		border 2px solid #fff
		border-radius 50%
		&::before
		&::after
			position absolute
			top 50%
			right 9px
			left @right
			content ''
			transform translateY(-50%)
		&::before
			height 18px
			border solid #fff
			border-width 2px 0
		&::after
			height 2px
			background-color #fff
	&__title
		width 100%
		color #fff
		font-weight bold
		font-size 3.1rem
		line-height 1
		text-transform uppercase
		text-align center
		&--hello
			display block
			font-size 8.3rem
			line-height 1
/*  </header>  */

/*  <about-us>  */
.about-us
	&__main
		background-color #fff
		border-radius 10px
		padding 40px 35px 25px
		margin-top -100px
		margin -100px 105px 0
		box-shadow 0 0 20px rgba(#000, .2)
		@media $media
			overflow hidden
			margin -100px 0 0
		&-title
			position relative
			font-weight bold
			font-size 3.6rem
			line-height 1
			text-transform uppercase
			text-align center
			padding-bottom 20px
			margin 0 0 30px
			&::before
				position absolute
				bottom 0
				left 50%
				width 380px
				height 1px
				background-color #d5d5d5
				content ''
				transform translateX(-50%)
		&-descr
			font-weight 300
			font-size 2.2rem
			line-height 3.4rem
	&__tips
		margin 65px 0 35px
		&-item
			text-align center
			@media $media
				margin-bottom 40px
		&-title
			font-size 2.4rem
			margin-top 20px
/*  </about-us>  */

/*  <reviews>  */
.reviews
	padding 50px 0 100px
	&__item
		width 100%
		&-pic
			display -webkit-flex
			display -moz-flex
			display -ms-flex
			display -o-flex
			display flex
			justify-content center
			align-items center
			width 178px
			height @width
			text-align center
			background-color #fff
			border-radius 50%
			margin 0 auto 25px
			img
				max-width 92px
				max-height 92px
		&-author
			font-weight bold
			font-size 2.6rem
			text-align center
			margin 0 0 25px
			&--post
				font-weight normal
				font-size 2.2rem
				margin 0
		&-text
			font-weight 300
			text-align center
			padding 0 150px
			@media $media
				padding 0
	.flickity-page-dots
		bottom 30px
		.dot
			opacity 1
			width 18px
			height @width
			background #fff
			box-shadow 0 0 5px rgba(#000, .3)
			margin 0 12px
			transition all .2s
			&.is-selected
				background #69d2e7
				box-shadow 0 0 0 2px #fff
/*  </reviews>  */

/*  <homepage-unknown>  */
.homepage-unknown
	position relative
	overflow hidden
	color #fff
	background-color #fa6900
	padding 130px 0 120px
	@media $media
		padding 30px 0
	&::before
		position absolute
		top -50%
		right -30%
		bottom @top
		z-index 3
		width 80%
		background-color #fff
		border-radius 50%
		content ''
		@media $media
			display none
	&__title
		font-weight bold
		font-size 2.6rem
		margin 0 0 40px
		&--sub
			font-weight normal
			font-size 2.2rem
	&__text
		font-weight 300
/*  </homepage-unknown>  */

/*  <company-info>  */
.company-info
	padding 85px 0 45px
	@media $media
		padding 30px 0
	&__logo
		display inline-block
		position relative
		padding-left 60px
		margin-bottom 40px
		img
			position absolute
			top 6px
			left 0
			width 50px
		&-name
			display block
			color #000
			font-weight bold
			font-size 2rem
			text-transform uppercase
		&-slogan
			display block
			color #000
			font-size 1.7rem
		a:hover&
			text-decoration none
	&__social
		display -webkit-flex
		display -moz-flex
		display -ms-flex
		display -o-flex
		display flex
		margin-bottom 30px
		&-item
			width 38px
			height @width
			border 1px solid #000
			background-repeat no-repeat
			background-position center center
			margin-left -1px
			&:first-child
				border-radius 2px 0 0 2px
				margin-left 0
			&:last-child
				border-radius 0 2px 2px 0
			&--facebook
				background-image url('data:image/png;base64,')
			&--twitter
				background-image url('data:image/png;base64,')
			&--pinterest
				background-image url('data:image/png;base64,')
			&--linkedin
				background-image url('data:image/png;base64,')
			a:hover&
				background-color rgba(#000, .1)
	&__text
		font-weight 300
		line-height 2.6rem
.latest-news
	@media $media
		margin-top 35px
	&__title
		font-weight bold
		font-size 2.6rem
		margin 0 0 50px
	&__item
		display -webkit-flex
		display -moz-flex
		display -ms-flex
		display -o-flex
		display flex
		font-size 1.4rem
		margin 30px 0
		&:last-child
			margin-bottom 0
		&-pic
			flex-shrink 0
			display -webkit-flex
			display -moz-flex
			display -ms-flex
			display -o-flex
			display flex
			justify-content center
			align-items center
			width 93px
			height @width
			background-color #fff
			box-shadow 0 0 10px rgba(#000, .2)
			img
				max-height @height
		&-main
			flex 1
			overflow hidden
			margin-left 28px
		&-title
			overflow hidden
			font-weight bold
			white-space nowrap
			text-overflow ellipsis
			margin 0 0 15px
			a
				color #000
/*  </company-info>  */

/*  <footer>  */
.footer
	flex-shrink 0
	background-color #69d2e7
	.container
		display -webkit-flex
		display -moz-flex
		display -ms-flex
		display -o-flex
		display flex
		justify-content space-between
		align-items center
		height 68px
		color #fff
		@media $media
			height auto
			flex-wrap wrap
			padding-top 20px
			padding-bottom @padding-top
	&__nav
		display -webkit-flex
		display -moz-flex
		display -ms-flex
		display -o-flex
		display flex
		@media $media
			width 100%
			margin-bottom 20px
		&-item
			position relative
			color #fff
			font-size 1.4rem
			margin-right 16px
			&:last-child
				&:after
					display none
			&:after
				position absolute
				top 50%
				right -12px
				content '|'
				transform translateY(-50%)
	&__copyright
		font-size 1.4rem
/*  </footer>  */

/*  <elements>  */
.no-scroll
	overflow-y hidden
	@media screen and (min-width:1200px)
		padding-right 18px
@keyframes fadeIn
	from
		opacity 0
	to
		opacity 1